<% if current_user %>
<div class="container">
  <div class="row">
    <div class="col s12 m9 l9">
      <div id="teams-top" class="section scrollspy">
        <h5>Manage Team Info</h5>
      </div>

      <%= link_to "ADD TEAM", new_team_url, class:"btn blue-grey darken-1 waves-effect waves-light", id:"button" %>

      <li class="divider"></li>

      <% @teams.each do |t| %>
        <%= div_for t, id:"#{t}", class:"section scrollspy" do %>
          <li class="backend-list"><%= link_to "#{t.name}", "/teams/#{t.id}/edit", class:"link" %></li>
          <p><b>Updated:</b> <%= t.updated_at.strftime("%a, %B %d, %Y") %></p>
          <%= button_to "Delete", {controller: :teams, action: 'destroy', id: t.id }, method: :delete, data: {confirm: "Are you sure?"}, class:"btn red darken-3 waves-effect waves-light" %></br>
          <li class="divider"></li>
        <% end %>
      <% end %>
    </div>
    <!-- Loop through teams to create scrollspy links -->
    <div class="col hide-on-small-only m3 l3 push right">
      <ul class="section table-of-contents">
        <p class="center">Content</p>
        <% @teams.each do |t| %>
          <li><%= link_to "#{t.name}", "#team_#{t.id}" %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="fixed-action-btn">
    <%= link_to "TOP", "#teams-top", class:"btn-floating btn-large blue-grey darken-3 white-text" %>
  </div>

<% else %>
<div class="container">
  <h5>Unauthorized!</h5>
<% end %>
</div></br>
