<% if current_user %>
<div class="container">
  <div id="teams-top" class="section scrollspy">
    <h3>Manage Team Info</h3>
  </div>

  <p><%= link_to "ADD TEAM", new_team_url %></p>

  <li class="divider"></li>

  <% @teams.each do |t| %>
    <li class="backend-list"><%= link_to "#{t.name}", "/teams/#{t.id}/edit" %></li>
    <p><b>Updated:</b> <%= t.updated_at.strftime("%a, %B %d, %Y") %></p>
    <%= button_to "Delete", {controller: :teams, action: 'destroy', id: t.id }, method: :delete %></br>
    <li class="divider"></li>
  <% end %>

  <div class="fixed-action-btn">
    <%= link_to "TOP", "#teams-top", class:"btn-floating btn-large blue-grey darken-3 white-text" %>
  </div>
  
<% else %>
<div class="container">
  <h3>Unauthorized!</h3>
<% end %>
</div></br>
