  <% end %>
  </ul>
  <!-- Dropdown Trigger -->
  <a class='dropdown-button blue-grey darken-1 btn' href='#' data-activates='dropdown3'>Division B2</a>
  <!-- Dropdown Structure -->
  <ul id='dropdown3' class='dropdown-content'>
  <% @teams.where(division: "B2").each do |t| %>
    <li><%= link_to "#{t.name}", "#{t.url}", target: '_blank' %></li>
  <% end %>
  </ul>
  <!-- Dropdown Trigger -->
  <a class='dropdown-button blue-grey darken-1 btn' href='#' data-activates='dropdown4'>Division C</a>
  <!-- Dropdown Structure -->
  <ul id='dropdown4' class='dropdown-content'>
  <% @teams.where(division: "C").each do |t| %>
    <li><%= link_to "#{t.name}", "#{t.url}", target: '_blank' %></li>
  <% end %>
  </ul>
</div></br>
