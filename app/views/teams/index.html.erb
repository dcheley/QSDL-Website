<div class="container">
  <h5>Team & Player Stats</h5>

  <!-- Loop through team names and urls by division for specefic team stats links -->
  <div class="team-section">
    <div class='blue-grey darken-1 btn'>Division A</div>
    <ul>
      <% @teams.where(division: "A").each do |t| %>
        <li><%= link_to "#{t.name}", "#{t.url}", target:'_blank', class:"link" %></li>
      <% end %>
    </ul>
  </div>
