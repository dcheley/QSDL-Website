    <div class='blue-grey darken-1 btn'>Division C</div>
    <ul>
      <% @teams.where(division: "C").each do |t| %>
        <li><%= link_to "#{t.name}", "#{t.url}", target:'_blank', class:"link" %></li>
      <% end %>
    </ul>
  </div>
</div></br>
