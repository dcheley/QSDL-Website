<%= form_for(@bar) do |f| %>
  <% if @bar.errors.any? %>
    <div id="error_explanation">
      <h5><%= pluralize(@bar.errors.count, "error") %> prohibited change!</h5>
      <ul>
      <% @bar.errors.full_messages.each do |msg| %>
        <li class="error"><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :url %>
    <%= f.text_field :url %>
  </div>

  <div class="field">
    <%= f.file_field :avatar %>
  </div></br>

  <button class="btn blue-grey darken-1 waves-effect waves-light" id="button">
    <%= f.submit %>
  </button></br></br>

  <%= link_to 'Cancel', :bar_list, class:"link" %>
<% end %>
