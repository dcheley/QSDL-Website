<h5>Post A Comment</h5>

<%= form_for([@team, @post]) do |f| %>
  <% if @post.errors.any? %>
    <h5 class="error-header"><%= pluralize(@post.errors.count, "error") %> occurred!</h5>

    <ul class="error-list">
      <% @post.errors.full_messages.each do |msg| %>
        <li class="error-msg"><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>

  <div class="field">
    <%= f.label :comment %>
    <%= f.text_area :comment, placeholder: '500 char max' %>
  </div>

  <div class="field">
    <%= f.file_field :avatar %>
  </div></br>

  <%= f.hidden_field :team_id, value: @team.id %>

  <button class="btn blue-grey darken-1 waves-effect waves-light" id="button">
    <%= f.submit %>
  </button></br></br>

  <%= link_to 'Cancel', team_url(@team), class:"link" %>
<% end %>
