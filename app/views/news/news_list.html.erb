<% if current_user %>
<div class="container">
  <h3>News</h3>
  <% @news.each do |article| %>
    <%= link_to "#{article.title}", "/news/#{article.id}/edit"%>
    <%= button_to "Delete", {controller: :news,
      action: 'destroy', id: article.id }, method: :delete %>
  <% end %>
<% else %>
<div class="container">
  <h3>Unauthorized!</h3>
<% end %>
</div></br>
