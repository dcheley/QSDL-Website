<% if current_user %>
<div class="container">
  <div id="news-top" class="section scrollspy">
    <h3>Manage News Articles</h3>
  </div>

  <p><%= link_to "ADD ARTICLE", new_news_url %></p>

  <li class="divider"></li>

  <% @news.each do |article| %>
    <li class="backend-list"><%= link_to "#{article.title}", "/news/#{article.id}/edit"%></li>
    <p><%= article.content %></p>
    <p><b>Updated:</b> <%= article.updated_at.strftime("%a, %B %d, %Y") %></p>
    <%= button_to "Delete", {controller: :news, action: 'destroy', id: article.id }, method: :delete %>
    </br><li class="divider"></li>
  <% end %>

  <div class="fixed-action-btn">
    <%= link_to "TOP", "#news-top", class:"btn-floating btn-large blue-grey darken-3 white-text" %>
  </div>

<% else %>
<div class="container">
  <h3>Unauthorized!</h3>
<% end %>
</div></br>
