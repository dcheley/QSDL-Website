<% if current_user %>
<div class="container">
  <h3>Manage News Articles</h3>

  <%= link_to "Add Article", new_news_url %>

  <% @news.each do |article| %>
    <li><%= link_to "#{article.title}", "/news/#{article.id}/edit"%></li>
    <%= button_to "Delete", {controller: :news,
      action: 'destroy', id: article.id }, method: :delete %>
  <% end %>

<% else %>
<div class="container">
  <h3>Unauthorized!</h3>
<% end %>
</div></br>
