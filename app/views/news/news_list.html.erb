<% if current_user %>
  <div class="container">
    <div class="row">
      <div class="col s12 m9 l9">
        <div id="news-top" class="section scrollspy">
          <h5>Manage News Articles</h5>
        </div>

        <%= link_to "ADD ARTICLE", new_news_url, class:"btn blue-grey darken-1 waves-effect waves-light", id:"button" %>

        <% @news.each do |article| %>
          <%= div_for article, id:"#{article}", class:"section scrollspy" do %>
            <li class="backend-list"><%= link_to "#{article.title}", "/news/#{article.id}/edit", class:"link" %></li>
            <p><%= article.paragraph_one %></p>
            <p><%= article.paragraph_two %></p>
            <p><%= article.paragraph_three %></p>
            <p><b>Updated:</b> <%= article.updated_at.strftime("%a, %B %d, %Y") %></p>
            <%= button_to "Delete", {controller: :news, action: 'destroy', id: article.id }, method: :delete, data: {confirm: "Are you sure?"}, class:"btn red darken-3 waves-effect waves-light" %></br>
            <li class="divider"></li>
          <% end %>
      <% end %>
    </div>
      <!-- Loop through news articles to create scrollspy links -->
      <div class="col hide-on-small-only m3 l3 push right">
        <ul class="section table-of-contents">
          <p class="center">Content</p>
          <% @news.each do |article| %>
            <li><%= link_to "#{article.title}", "#news_#{article.id}" %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="fixed-action-btn">
      <%= link_to "TOP", "#news-top", class:"btn-floating btn-large blue-grey darken-3 white-text" %>
    </div>

<% else %>
  <div class="container">
    <h5>Unauthorized!</h5>
<% end %>
  </div></br>
