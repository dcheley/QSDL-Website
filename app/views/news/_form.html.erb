<%= form_for(@new) do |f| %>
  <% if @new.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@new.errors.count, "error") %> prohibited change!</h2>
      <ul>
      <% @new.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>

    <!-- <div class="field">
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div> -->

    <div class="actions">
      <%= f.submit %>
    </div>

    <%= link_to 'Cancel', root_path %>
<% end %>
